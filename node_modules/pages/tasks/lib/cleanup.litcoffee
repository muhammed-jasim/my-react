    async = require 'async'

    utils = require '../../lib/utils'

    removeCompiledAssets = (cb) -> 

      commands = [
        "rm -r #{process.cwd()}/_app/compiled"
        "rm -r #{process.cwd()}/_app/vendor"
        "rm -r #{process.cwd()}/_app/views"
        "rm #{process.cwd()}/_app/index.html"
        "rm #{process.cwd()}/_app/app.litcoffee"
      ]

      async.each commands, utils.runWithCb, () -> cb()

## Public API ##

    module.exports = exports = (cb) -> removeCompiledAssets cb